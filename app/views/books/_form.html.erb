<div class="row">
  <div class="col-md-4">
    <%= form_for @book do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter book title" %>
      </div>

      <div class="form-group">
        <%= f.label :author %>
        <%= f.text_field :author, class: 'form-control', placeholder: "Enter author name" %>
      </div>

      <div class="form-group">
        <%= f.label :notes %>
        <%= f.text_area :notes, class: 'form-control' %>

      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
